            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPartidaFaltaTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addPonto"
            android:text="@string/partida_faltas"
            android:textAllCaps="false"
            android:textSize="@dimen/texto_caixa" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPartidaEscanteioTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
