<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layoutPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="0dp"
        android:visibility="visible"
        tools:context="br.com.juliorgm.pelota.PartidaActivity">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/fundo_de_campo"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/txtPartidaTime1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_orange_light"
            android:padding="4dp"
            android:paddingHorizontal="5dp"
            android:text="TextView"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPartidaTempo" />

        <TextView
            android:id="@+id/txtPartidaTime2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/holo_orange_light"
            android:padding="4dp"
            android:paddingHorizontal="5dp"
            android:text="TextView"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPartidaTempo" />

        <Button
            android:id="@+id/btnGolPrimeiroTime"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:onClick="golTime1"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGolsPrimeiroTime" />

        <Button
            android:id="@+id/btnGolSegundoTime"
            android:layout_width="115dp"
            android:layout_height="60dp"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="8dp"
            android:onClick="golTime2"
            android:text="+"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtGolsSegundoTime" />

        <Button
            android:id="@+id/btnResultadoFinalPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@android:color/holo_orange_dark"
            android:onClick="finalizaPartida"
            android:padding="8dp"
            android:text="Finalizar Partida"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnGolPrimeiroTime" />

        <TextView
            android:id="@+id/txtGolsPrimeiroTime"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/fundo_placar"
            android:paddingHorizontal="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="80sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPartidaTime1" />

        <TextView
            android:id="@+id/txtGolsSegundoTime"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="64dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/fundo_placar"
            android:paddingHorizontal="5dp"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPartidaTime2" />

        <TextView
            android:id="@+id/txtPartidaTempo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTerminarPartida"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:onClick="terminarPartida"
            android:text="Nova Partida"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnResultadoFinalPartida" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>
