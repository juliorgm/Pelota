            android:textSize="@dimen/texto_caixa" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textAlignment="textStart">

        <Button
            android:id="@+id/btnPartidaVermelhoTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addPonto"
            android:text="@string/partida_vermelho"
            android:textAllCaps="false"
            android:textSize="@dimen/texto_caixa" />

        <TextView
            android:id="@+id/txtPartidaVermelhoTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/partida_zero"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/partida_placar"
            android:textSize="@dimen/texto_add"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPartidaVermelhoTime2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
