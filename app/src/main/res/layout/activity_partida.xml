    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPartidaAmareloTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addPonto"
            android:text="@string/partida_amarelo"
            android:textAllCaps="false"
            android:textSize="@dimen/texto_caixa" />

        <TextView
            android:id="@+id/txtPartidaAmareloTime1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
